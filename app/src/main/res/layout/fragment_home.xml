<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >
        <FrameLayout
            android:background="#F4F1F1"
            android:layout_width="match_parent"
            android:tag="content"


            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView

                        android:id="@+id/topCard"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="5:2"
                        app:layout_constraintTop_toTopOf="parent">


                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/imageSlider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:sliderAnimationDuration="600"
                            app:sliderAutoCycleDirection="back_and_forth"
                            app:sliderAutoCycleEnabled="true"
                            app:sliderIndicatorAnimationDuration="1000"
                            app:sliderIndicatorGravity="center_horizontal|bottom"
                            app:sliderIndicatorMargin="15dp"
                            app:sliderIndicatorOrientation="horizontal"
                            app:sliderIndicatorPadding="3dp"
                            app:sliderIndicatorRadius="2dp"
                            app:sliderIndicatorSelectedColor="#0D5A5A5A"
                            app:sliderIndicatorUnselectedColor="#00FFFFFF"
                            app:sliderScrollTimeInSec="3"

                            app:sliderStartAutoCycle="true" />


                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/popular_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/topCard"
                        android:text="Popular Courses"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:layout_margin="10dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_marginRight="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/popular_txt"
                        app:layout_constraintBottom_toBottomOf="@id/popular_txt"/>


                    <HorizontalScrollView
                        android:id="@+id/popular_scroll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/popular_txt">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/course_img"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/kidlearning"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/course_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/roboto"
                                    android:text="Kid's Learning"
                                    android:textColor="@color/black_app"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/card" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:padding="5dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/quranshikkha_img"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/quranshikkha"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/quranshikkha_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/card2"
                                    android:text="Quran Shikkha"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_app"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:padding="5dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/spokenenglish_img"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/spokenenglish"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/spokenenglish_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/card3"
                                    android:text="English Spoken"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_app"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:padding="5dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/graphicdesign_img"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/graphicdesign"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/graphicdesign_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/card4"
                                    android:text="Graphic Design"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_app"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:padding="5dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/web_design_img"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/web_design"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/web_design_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/card5"
                                    android:text="Web Design"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_app"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:padding="5dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/basic_computer_img"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/basic_computer"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/basic_computer_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/card6"
                                    android:text="Basic Computer"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_app"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:padding="5dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/digital_marketing"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/digital_marketing"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/digital_marketing_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/card7"
                                    android:text="Digital Marketing"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_app"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:padding="5dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/card8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:layout_margin="10dp">

                                    <ImageView
                                        android:id="@+id/foreign_language"
                                        android:layout_width="110dp"
                                        android:layout_height="110dp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/foreign_language"/>

                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/foreign_language_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/card8"
                                    android:text="Foreign Language"
                                    android:fontFamily="@font/roboto"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/black_app"/>

                            </androidx.constraintlayout.widget.ConstraintLayout>



                        </LinearLayout>



                    </HorizontalScrollView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/registration_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/popular_scroll"
                        android:layout_margin="20dp"
                        android:background="@drawable/btn_back"
                        android:text="Student Registration"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="20dp"

                        />

                    <TextView
                        android:id="@+id/all_course_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/registration_btn"
                        android:text="All Courses"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"/>
                    <TextView
                        android:id="@+id/viewall_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/registration_btn"
                        android:text="View all"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@color/black_app"
                        />

                    <ScrollView
                        android:id="@+id/all_course_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/all_course_txt"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="4"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/kid_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">



                                        <androidx.constraintlayout.widget.ConstraintLayout

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_margin="5dp">



                                                <de.hdodenhof.circleimageview.CircleImageView
                                                    android:id="@+id/kid_learning_all_courses"
                                                    android:layout_width="85dp"
                                                    android:layout_height="85dp"
                                                    android:src="@drawable/kid_learning_all_courses"
                                                    app:civ_border_width="4dp"
                                                    app:civ_border_color="@color/white"
                                                    app:layout_constraintStart_toStartOf="parent"
                                                    app:layout_constraintEnd_toEndOf="parent"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    />





                                            <TextView
                                                android:id="@+id/kid_learning_all_courses_txt"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintTop_toBottomOf="@id/kid_learning_all_courses"
                                                android:text="Kid's Learning"
                                                android:textStyle="bold"
                                                android:textSize="12dp"
                                                android:fontFamily="@font/roboto"
                                                android:layout_marginTop="5dp"
                                                android:textColor="@color/black_app"/>

                                        </androidx.constraintlayout.widget.ConstraintLayout>





                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_margin="5dp">


                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/basic_computer_all"
                                            android:layout_width="85dp"
                                            android:layout_height="85dp"
                                            android:src="@drawable/basic_computer_all"
                                            app:civ_border_width="4dp"
                                            app:civ_border_color="@color/white"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <TextView
                                            android:id="@+id/basic_computer_all_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/basic_computer_all"
                                            android:text="Basic Computer"
                                            android:textStyle="bold"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/roboto"
                                            android:layout_marginTop="5dp"
                                            android:textColor="@color/black_app"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_margin="5dp">


                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/digital_marketing_all"
                                            android:layout_width="85dp"
                                            android:layout_height="85dp"
                                            android:src="@drawable/digital_marketing_all"
                                            app:civ_border_width="4dp"
                                            app:civ_border_color="@color/white"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <TextView
                                            android:id="@+id/digital_marketing_all_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/digital_marketing_all"
                                            android:text="Digital Marketing"
                                            android:textStyle="bold"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/roboto"
                                            android:layout_marginTop="5dp"
                                            android:textColor="@color/black_app"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_margin="5dp">


                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/web_design_all"
                                            android:layout_width="85dp"
                                            android:layout_height="85dp"
                                            android:src="@drawable/web_design_all"
                                            app:civ_border_width="4dp"
                                            app:civ_border_color="@color/white"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <TextView
                                            android:id="@+id/web_design_all_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/web_design_all"
                                            android:text="Web Design"
                                            android:textStyle="bold"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/roboto"
                                            android:layout_marginTop="5dp"
                                            android:textColor="@color/black_app"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                </LinearLayout>



                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="4"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_margin="5dp">


                                        <de.hdodenhof.circleimageview.CircleImageView
                                            android:id="@+id/official_computer_all"
                                            android:layout_width="85dp"
                                            android:layout_height="85dp"
                                            android:src="@drawable/official_computer_all"
                                            app:civ_border_width="4dp"
                                            app:civ_border_color="@color/white"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"/>

                                        <TextView
                                            android:id="@+id/official_computer_all_txt"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintTop_toBottomOf="@id/official_computer_all"
                                            android:text=" Computer"
                                            android:textStyle="bold"
                                            android:textSize="12dp"
                                            android:fontFamily="@font/roboto"
                                            android:layout_marginTop="5dp"
                                            android:textColor="@color/black_app"/>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
